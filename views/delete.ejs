<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles.css">
    <title>List all task</title>
</head>

<body>
    <a href="/">home</a>
    <a href="/new_task">Add new task</a>
    <table>
        <thead>
            <tr>
                <td>id</td>
                <td>task name</td>
                <td>due date</td>
                <td>status</td>
                <td>description</td>
                <td>assign</td>
            </tr>
        </thead>
        <% for(var i =0;i< db.length;i++){ %>
            <tr>
                <td><%= db[i]._id%></td>
                <td><%= db[i].taskName%></td>
                <td><%= db[i].dueDate%></td>
                <td><%= db[i].status%></td>
                <td><%= db[i].description %></td>
                <td><%= db[i].assign%></td>
            </tr>

            <% } %>
        <tbody>

        </tbody>
    </table>

        <form method="POST">
            <div>
                <label for="id">TASK ID</label>
                <input type="text" name="id" id="id" placeholder="enter task ID">
            </div>
            <div>
                <input type="submit" value="delete">
            </div>
            </form>
</body>
</html>